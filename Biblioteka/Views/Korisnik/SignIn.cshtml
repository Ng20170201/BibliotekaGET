@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="container">
    <div class="inner-container" style="width:50%">


        <h3>Log in</h3>
        <form method="post" asp-controller="Korisnik" asp-action="SignIn">
            <div  class="text-danger"></div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Tvoj username " name="username" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Tvoj password " name="password" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>

        </form>
    </div>
</div>